@using Cassette.Nancy
@{
    //Common styles
    Bundles.Reference("Content/css/libs/", "css-libs");

    //Common scripts
    Bundles.Reference("Content/scripts/libs/jquery-1.7.2.js", "script-libs");
    Bundles.Reference("Content/scripts/libs/", "script-libs");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>App</title>
    
    @Bundles.RenderStylesheets("css-libs")
    @Bundles.RenderStylesheets()
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                                                                                                 class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">PhotoCache</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Main hero unit for a primary marketing message or call to action -->
        <div class="hero-unit">
            <h1>
                Hello, world!</h1>
            <p>
                This is a template for a simple marketing or informational website. It includes
                a large callout called the hero unit and three supporting pieces of content. Use
                it as a starting point to create something more unique.</p>
            <p>
                <a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
        </div>
        
        <div id="content">
            @RenderBody()
        </div>

        <hr>
        <footer>
            <p>
                &copy; Company 2012</p>
        </footer>
    </div>

    <!-- /container -->
    @Bundles.RenderScripts("script-libs")
    @Bundles.RenderScripts()
</body>
</html>
